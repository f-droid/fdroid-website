#, no-wrap
msgid ""
"android {\n"
"    packagingOptions {\n"
"        doNotStrip '**/*.so'\n"
"    }\n"
"}\n"
msgstr ""
"android {\n"
"    packagingOptions {\n"
"        doNotStrip '**/*.so'\n"
"    }\n"
"}\n"

