"export CPUS_MAX=1\n"
"export CPUS=$(getconf _NPROCESSORS_ONLN)\n"
"for (( c=$CPUS_MAX; c<$CPUS; c++ )) ; do echo 0 > /sys/devices/system/cpu/cpu$c/online; done\n"

