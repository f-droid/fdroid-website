"log_format privacy '0.0.0.0 - $remote_user [$time_local] \"$request\" $status $body_bytes_sent \"$http_referer\" \"-\" $geoip_country_code';\n"
"\n"
"access_log /var/log/nginx/access.log privacy;\n"
